<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - PizzariaFalia</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/PizzariaFalia.styles.css" asp-append-version="true" />
    <style>
        .navbar {
            background: linear-gradient(90deg,#111827,#1f2937);
        }

        .navbar-brand {
            font-weight: 700;
            color: #f97316 !important;
            font-size: 1.4rem;
        }

        .nav-link {
            color: #e5e7eb !important;
            font-weight: 500;
            transition: 0.2s;
        }

            .nav-link:hover {
                color: #f97316 !important;
            }

        .admin-link {
            color: #ef4444 !important;
            font-weight: 600;
        }

            .admin-link:hover {
                color: #dc2626 !important;
            }

        .main-container {
            min-height: 80vh;
            background: #f9fafb;
            border-radius: 12px;
            padding: 25px;
            box-shadow: 0 4px 15px rgba(0,0,0,0.05);
        }

        footer {
            background: #111827;
            color: #9ca3af;
            padding: 18px 0;
            margin-top: 40px;
        }

            footer a {
                color: #f97316;
                text-decoration: none;
                font-weight: 500;
            }

                footer a:hover {
                    text-decoration: underline;
                }
    </style>
</head>
<body>
    <header>
        <nav class="navbar navbar-expand-sm navbar-dark mb-4 shadow">
            <div class="container-fluid">
                <a class="navbar-brand" asp-controller="Menu" asp-action="Index">PizzariaFalia</a>
                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target=".navbar-collapse" aria-expanded="false">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="navbar-collapse collapse d-sm-inline-flex justify-content-between">
                    <ul class="navbar-nav flex-grow-1">
                        <li class="nav-item"><a class="nav-link" asp-controller="Menu" asp-action="Index">Menu</a></li>
                        @if (User.Identity != null && User.Identity.IsAuthenticated)
                        {
                            <li class="nav-item"><a class="nav-link" asp-controller="Cart" asp-action="Index">Cart</a></li>
                            <li class="nav-item"><a class="nav-link" asp-controller="Order" asp-action="Index">My Orders</a></li>
                        }
                        @if (User.IsInRole("Admin"))
                        {
                            <li class="nav-item"><a class="nav-link admin-link" asp-controller="AdminMenu" asp-action="Dashboard">Edit Menu</a></li>
                        }
                    </ul>
                    <partial name="_LoginPartial" />
                </div>
            </div>
        </nav>
    </header>
    <div class="container">
        <main role="main" class="main-container">@RenderBody()</main>
    </div>
    <footer class="text-center">
        <div class="container">&copy; 2026 - PizzariaFalia - <a asp-area="" asp-controller="Home" asp-action="Privacy">Privacy</a></div>
    </footer>
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
