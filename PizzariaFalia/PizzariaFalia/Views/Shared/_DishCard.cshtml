@model DishIndexViewModel
<div class="card h-100 shadow-sm border-0 dish-card">
    <div class="card-body d-flex flex-column">
        <h5 class="card-title mb-2">@Model.Name</h5>
        <p class="mb-1 small text-muted">Normal Portion: <b>@Model.PriceSmall€</b> for <b>@Model.GramsSmall g.</b></p>
        @if (Model.PriceBig != null && Model.GramsBig != null)
        {
            <p class="mb-3 small text-muted">Big Portion: <b>@Model.PriceBig€</b> for <b>@Model.GramsBig g.</b></p>
        }
        <div class="mt-auto d-flex gap-2 flex-wrap">
            <a asp-controller="Menu" asp-action="Details" asp-route-id="@Model.Id" class="btn btn-outline-dark btn-sm flex-fill">Details</a>
            @if (User.IsInRole("Admin"))
            {
                <a asp-controller="AdminMenu" asp-action="EditDish" asp-route-id="@Model.Id" class="btn btn-warning btn-sm flex-fill">Edit</a>
                <a asp-controller="AdminMenu" asp-action="DeleteDish" asp-route-id="@Model.Id" class="btn btn-danger btn-sm flex-fill">Delete</a>
}
        </div>
    </div>
</div>
<style>
    .dish-card {
        transition: all .18s ease-in-out;
        border-radius: 14px
    }

        .dish-card:hover {
            transform: translateY(-3px);
            box-shadow: 0 6px 18px rgba(0,0,0,.08)
        }
</style>
