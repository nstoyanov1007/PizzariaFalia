@model IEnumerable<OrderIndexViewModel>

@{
    ViewData["Title"] = "Orders";
}

<h2>Orders</h2>

@if (!Model.Any())
{
    <p class="text-center text-muted">No orders found.</p>
}
else
{
    <table class="table table-striped table-bordered">
        <thead class="thead-dark">
            <tr>
                <th>Order ID</th>
                <th>User</th>
                <th>Status</th>
                <th>Created At</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var order in Model)
            {
                <tr>
                    <td>@order.Id</td>
                    <td>@order.UserId</td>
                    <td>@order.Status</td>
                    <td>@order.CreatedAt.ToString("g")</td>
                    <td>
                        <a asp-controller="Order" asp-action="Details" asp-route-id="@order.Id" class="btn btn-primary btn-sm">View</a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
}
